.user-side
    .user-img
        height 220px
        width @height
        overflow hidden
        margin-bottom 5px
        border-radius 5px
        img
            height 100%
            width @height
            object-fit contain
    .user-content
        .name
            font-size 24px
            font-weight 600
            margin-bottom 5px
        .points
            display flex
            align-items center
            .title
                font-size 14px
                color gray
                margin-right 8px
            .sub
                font-size 16px
                font-weight bold
                color text-color
                i
                    margin-right 0px
                    font-size 14px
        .points-title
            .main-name
                font-size 16px
                b
                    color theme-dark
                    margin 0px 5px
            .transaction-timeline
                ul
                    padding 0px
                    margin 0px
                    list-style none
                    li
                        padding 10px
                        position relative
                        padding-left 20px
                        .transaction-content
                            font-size 12px
                        &:before
                            content ''
                            position absolute
                            height calc(100% - 6px)
                            display block
                            border-left 1px solid #ddd
                            width 2px
                            left 4px
                            top 20px
                        &:after
                            content ''
                            display block
                            height 8px
                            width 8px
                            border-radius 50%
                            background #ddd
                            position absolute
                            top 15px
                            left 0px
                        &:last-child
                            border-bottom none
                            &:before
                                border-left none
.user-main
    .nav
        &.nav-tabs
            border-bottom none
        .nav-item
            .nav-link
                padding 0px
                border none
                font-size 18px
                font-weight bold
                color text-color
                text-transform uppercase
                margin-right 20px
                &.active
                    border-bottom 3px solid
                    border-color theme-dark
            &:last-child
                margin-right 0px
    .tab-content
        box-shadow none
        padding 20px 0px

.transaction-timeline
    ul
        padding 0px
        margin 0px
        list-style none
        li
            padding 10px
            position relative
            padding-left 20px
            .transaction-content
                font-size 12px
            &:before
                content ''
                position absolute
                height calc(100% - 6px)
                display block
                border-left 1px solid #ddd
                width 2px
                left 4px
                top 20px
            &:after
                content ''
                display block
                height 8px
                width 8px
                border-radius 50%
                background #ddd
                position absolute
                top 15px
                left 0px
            &:last-child
                border-bottom none
                &:before
                    border-left none
    &.lg
        ul
            li
                .transaction-content
                    font-size 14px

.coupon-download
    position relative
    width 400px
    height 160px
    background-image radial-gradient(circle at 1px 8px, transparent 6px, #2c84f1 6px, #2c84f1 0px), radial-gradient(circle at 199px 8px, transparent 6px, #2c84f1 6px, #2c84f1 0px)
    margin 20px auto
    padding-left 50px
    text-align left
    background-size 200px 18px
    background-position 0 0, 200px 0
    background-repeat-x no-repeat
    font-size 60px
    color #fff
    font-weight bold
    line-height 160px
    box-sizing border-box
    cursor pointer
    &::before
        position absolute
        content ""
        left 270px
        top 0
        bottom 0
        width 0
        border-left 1px dashed #fff
    .coupon-text-details
        position absolute
        width auto
        text-align center
        top 45px
        text-transform uppercase
        right 0px
        line-height 40px
        letter-spacing 5px
        transform rotate(90deg)
        font-size 22px

.cou-dwnld
    font-size 12px
    color theme-dark
    cursor pointer
    text-align center
    &:hover
        text-decoration underline