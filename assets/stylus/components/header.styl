header
    &.header-style-1
        background theme
        .top-bar
            background #2e80e3
            .container
                .header-top-inner
                    display flex
                    align-items center
                    flex-direction row-reverse
                    justify-content space-between
            +mobile()
                display none
        .main-header
            padding 0px 0px 0px 0px
            height 180px
            width 100%
            .classy-navbar-toggler
                border none
                background-color transparent
                cursor pointer
                display none
                .navbarToggler
                    display inline-block
                    cursor pointer
                    span
                        position relative
                        background-color white
                        border-radius 3px
                        display block
                        height 3px
                        margin-top 5px
                        padding 0
                        -webkit-transition-duration .3s
                        transition-duration .3s
                        width 30px
                        cursor pointer
                +mobile()
                    display block
            .classy-menu
                display none
                .classynav
                    background white
                    position fixed
                    z-index 10
                    width 80%
                    left 0px
                    top 0px
                    height 100%
                    background white
                    .classynav-header
                        background #f3ebeb
                        padding 8px
                        .user-info
                            display flex
                            align-items center
                            padding 0px
                            margin-bottom 10px
                            .user-img
                                width 50px
                                height @width
                                margin-right 10px
                            .user-content
                                width calc(100% - 60px)
                                .name
                                    font-size 14px
                                    font-weight 500
                                    line-height normal
                                    margin-bottom 0px
                                .email
                                    font-size 12px
                                    color gray
                                    line-height normal
                        .user-amount-info
                            line-height normal
                            text-align left
                            .amount-label
                                font-size 12px
                                margin-bottom 5px
                                line-height normal
                                color gray
                            .amount-info
                                font-size 14px
                                font-weight 600
                                color green
                                i
                                    margin-right 5px
                    .classynav-body
                        padding 0px
                        background white
                        .classynav-inner
                            ul
                                list-style none
                                padding 0px
                                margin 0px
                                li
                                    padding 15px 10px
                                    line-height normal
                                    text-align left
                                    margin-bottom 0px
                                    border-bottom 1px solid #ddd
                                    a
                                        color #7f7f7f
                                        font-size 14px
                                        font-weight 600
                                        i
                                            width 30px
                                        &:hover
                                            text-decoration none
                                    &:last-child
                                        margin-bottom 0px
                .classycloseIcon
                    position absolute
                    top 2px
                    right 20px
                    z-index 12
                    display block
                    .cross-wrap
                        width 40px
                        height 40px
                        text-align center
                        cursor pointer
                        position relative
                        font-size 30px
                        color white
                &.show-side
                    display block
            .top-search-holder
                .contact-row
                    .icon
                        color #12cca7
                        font-size 18px
                        line-height 23px
                        margin 0 8px 0 0
                        vertical-align middle
                    .phone
                        margin 0 23px 0 0
                        border-right 1px solid #E2E2E2
                        padding-right 35px
                .search-area
                    -webkit-border-radius 0px
                    -moz-border-radius 0px
                    border-radius 0px
                    margin 14px 0px
                    background #fff
                    border-radius 999px
                    width 100%
                    .search-field
                        border medium none
                        -webkit-border-radius 5px 0 0 5px
                        -moz-border-radius 5px 0 0 5px
                        border-radius 999px
                        padding 13px 19px
                        width calc(100% - 52px)
                        font-family 'Barlow', sans-serif
                        font-size 14px
                        &:focus
                            outline none
                    .categories-filter
                        border-right 1px solid #E0E0E0
                        text-transform capitalize
                        display inline-block
                        line-height 35px
                        background #f6f6f6
                        border-radius 999px 0px 0px 999px
                        a
                            padding 0 20px
                            color #666
                            font-size 14px
                            .caret
                                margin-left 15px
                                color #a0a0a0
                        .dropdown-menu
                            -moz-box-shadow none
                            -webkit-box-shadow none
                            box-shadow none
                            border 1px solid #e1e1e1
                            padding 12px 17px
                            -webkit-border-radius 0px
                            -moz-border-radius 0px
                            border-radius 0px
                            li
                                margin-bottom 10px
                                a
                                    padding 0px
                                &.menu-header
                                    font-family 'Open Sans', sans-serif
                                    line-height 30px
                    .search-button
                        border-radius 999px
                        display inline-block
                        float right
                        margin 4px 5px
                        padding 10px 12px
                        text-align center
                        background theme
                        &:after
                            color #fff
                            content "\f002"
                            font-family "Font Awesome 5 Pro"
                            font-size 16px
                            line-height 16px
                        &:hover
                            text-decoration none
                            background theme-dark
            .logo-holder
                margin-top 8px
                line-height 53px
                .logo
                    width 200px
                    height 60px
                    position relative
                    img
                        background-repeat no-repeat
                        position absolute
                        object-fit contain
                        height 100%
                        width 100%
                +mobile()
                    display flex
                    align-items center
                    justify-content space-between
            .navbar-default
                padding 0px
                margin-top 8px
                .navbar-collapse
                    .navbar-nav
                        & > li
                            margin-top 5px
                            & > a
                                color #fff
                                font-size 16px
                                font-weight 600
                                padding 12px 15px
                                &:hover
                                    background #fff
                                    border-radius 999px
                                    color #ee4054
                +mobile()
                    display none